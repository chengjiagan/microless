{
  "_comment": "for testing only",
  "server": {
    "enable": true,
    "update_interval": 1,
    "update_ratio": 0.5
  },
  "client": {
    "enable": true,
    "vm_postfix": "-vm",
    "serverless_postfix": "-serverless",
    "update_interval": 1,
    "retry": 3,
    "service_rate_limit": {
      "home-timeline": 100,
      "post-storage": 100
    },
    "local_services": {
      "home-timeline": "8080",
      "post-storage": "8081"
    },
    "redis_addr": "redis://redis:6379/0"
  },
  "serverless": {
    "enable": true,
    "max_concurrency": 1,
    "max_capacity": 10,
    "method_requirements": {
      "ReadPosts": 1,
      "StorePost": 0.5
    }
  },
  "amoeba": {
    "enable": true,
    "switch_latency": 150,
    "limit": 800,
    "vm_postfix": "-vm:8080",
    "serverless_postfix": "-kn.social-network.svc.cluster.local:80"
  }
}